@model MVCLogin.ViewModels.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="login-div" class="centered">
    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    <h4>Welcome!</h4>
                    <h1>
                        Login
                    </h1>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", required = true, placeholder = "Username" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ValidationMessageFor(model => model.UserName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = true, placeholder = "Password" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ValidationMessageFor(model => model.Password)
                </td>
            </tr>
            <tr>
                <td>
                    <label class="field-validation-error">
                        @Html.DisplayFor(model => model.LoginErrorMessage)
                    </label>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" class="btn btn-primary login-btn" name="name" value="Login" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="reset" class="btn btn-secondary clear-btn" name="name" value="Clear" />
                </td>
            </tr>
        </table>
    }
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>